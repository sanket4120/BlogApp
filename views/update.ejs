<%-include('./partials/header')%> <%-include('./partials/navbar')%>

<form
  method="post"
  action="/<%=blog.id%>?_method=PUT"
  class="container my-5 needs-validation"
  novalidate
>
  <input
    type="text"
    name="title"
    placeholder="Blog Title"
    class="form-control"
    value="<%=blog.title%>"
    required
  />
  <br />
  <input
    type="text"
    name="image"
    placeholder="Image url"
    class="form-control"
    value="<%=blog.image%>"
    required
  />
  <br />
  <input
    type="text"
    name="author"
    placeholder="Author Name"
    class="form-control"
    value="<%=blog.author%>"
    required
  />
  <br />
  <textarea
    class="form-control"
    rows="10"
    cols="30"
    placeholder="Blog Text"
    name="body"
    required
  >
<%=blog.body%></textarea
  >
  <br />
  <button type="submit" class="btn btn-primary">Update Blog</button>
</form>

<%-include('./partials/footer')%>
